<%= stylesheet_link_tag "main", media: "all" %>
<%if Current.user %>
  <div class="main-container">
    <div class="logout-container">
      <span class="login-message">Logged in as: <%= Current.user.username%></span>
      <div class="logout-div">
        <%= button_to "Logout", logout_path, method: :delete, class: "button-secondary logout" %>
      </div>
    </div>
    <div class="control-container">
      <a class="button-primary" href="/person_search">People Search</a>
      <a class="button-primary" href="/course_search">Courses Search</a>
      <a class="button-primary" href="/project_search">Projects Search</a>
      <a class="button-primary" href="/thesis_search">Theses Search</a>
      <a class="button-primary" href="/favorites">Favorites</a>
      <a class="button-primary" href="/reports">Print Views</a>
    </div>
  </div>
<% else%>
  <div class="main-container">
    <div class="control-container">
      <a class="button-primary" href="/sign_in">Log In</a>
      <a class="button-primary" href="/registration">Sign Up</a>
    </div>
  </div>
<% end%>
