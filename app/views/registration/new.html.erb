<%= stylesheet_link_tag "user-forms", media: "all" %>
<div class="main-container">
  <div class="form">
    <h1>Sign Up</h1>
    <%= form_with model: @user, data: { turbo: false }, url: registration_path do |form| %>
      <% if @user.errors.any?%>
        <div>
          <% @user.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <%end%>
        </div>
      <%end%>
      <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: "input-field"%>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "input-field" %>
      </div>
      <div class="controls">
        <%= form.submit "Sign Up", class: "button-secondary submit-button" %>
      </div>
    <% end %>
  </div>
</div>
