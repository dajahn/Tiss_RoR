<%= stylesheet_link_tag "user-forms", media: "all" %>
<div class="main-container">
  <div class="form">
    <h1>Sign In</h1>
    <%= form_with url: sign_in_path, data: { turbo: false } do |form| %>
      <div class="form-group">
        <%= form.label :username %>
        <%= form.text_field :username, class: "input-field"%>
      </div>
      <div class="form-group">
        <%= form.label :password %>
        <%= form.password_field :password, class: "input-field" %>
      </div>
      <div class="controls">
        <%= form.submit "Log in", class: "button-secondary submit-button" %>
      </div>
    <% end %>
  </div>
</div>
